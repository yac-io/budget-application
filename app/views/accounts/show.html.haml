%h2
  =@account.name
  = "#{format_currency @account.current_value, @account.currency}"

%h2
  Current month:
  = "#{format_currency @account.this_month_value, @account.currency}"
  - unless @account.previous_month_value.zero?
    (
    = @account.this_month_to_previous_month_ratio
    compared to previous month at this date)

=link_to 'Add Transaction', new_account_transaction_path(@account), class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored'

%br
%br

=render 'transactions/transaction-table', transactions: @account.transactions

= link_to 'Recurring transactions', account_recurring_transactions_path(@account)
|
= link_to 'Edit', edit_account_path(@account)
|
= link_to 'Back', accounts_path


