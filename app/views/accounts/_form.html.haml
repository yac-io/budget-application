= form_with(model: account, local: true) do |form|
  - if account.errors.any?
    #error_explanation
      %h2
        = pluralize(account.errors.count, "error")
        prohibited this account from being saved:
      %ul
        - account.errors.full_messages.each do |message|
          %li= message
  .form-group
    = form.label :name, class: 'col-form-label'
    = form.text_field :name, id: :account_name, class: 'form-control'
  .form-group
    = form.label :currency, class: 'col-form-label'
    = form.text_field :currency, id: :account_currency, class: 'form-control'
  .form-group
    = form.label :account_type, class: 'col-form-label'
    = form.select :account_type, [%w(Cash cash), %w(Investment investment)], id: :account_type, class: 'form-control'

  .actions
    = form.submit class: 'btn btn-primary'
