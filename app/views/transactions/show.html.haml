  %strong Account:
  = @transaction.account.name
%p
  %strong Payment mean:
  = @transaction.payment_mean.name
%p
  %strong Category:
  = @transaction.category.name unless @transaction.category.nil?
%p
  %strong Name:
  = @transaction.name
%p
  %strong Amount:
  = "#{@transaction.amount} #{@transaction.currency}"
