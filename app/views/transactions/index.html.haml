%p#notice= notice
%h1 Transactions
%table
  %thead
    %tr
      %th Account
      %th Payment mean
      %th Category
      %th Currency
      %th Name
      %th Amount
      %th Settlement currency
      %th Settlement amount
      %th Date
      %th{:colspan => "3"}
  %tbody
    - @transactions.each do |transaction|
      %tr
        %td= transaction.account.name
        %td= transaction.payment_mean.name
        %td= transaction.category.name unless transaction.category.nil?
        %td= transaction.name
        %td= "#{transaction.amount}&nbsp;#{transaction.currency}"
        %td= "#{transaction.settlement_amount}&nbsp;#{transaction.settlement_currency}"
        %td= transaction.date
        %td= link_to 'Show', transaction
        %td= link_to 'Edit', edit_transaction_path(transaction)
        %td= link_to 'Destroy', transaction, method: :delete, data: {confirm: 'Are you sure?'}
%br/
= link_to 'New Transaction', new_transaction_path
